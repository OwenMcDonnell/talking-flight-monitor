<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:tfm.Converters">
    <converters:FontResizer x:Key="FontResizer"/>
    <Style TargetType="{x:Type Control}">
        <Setter Property="FontSize">
            <Setter.Value>
                <MultiBinding Converter="{DynamicResource FontResizer}">
                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Window}" />
                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType=Window}" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ToggleButton">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="Green" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>