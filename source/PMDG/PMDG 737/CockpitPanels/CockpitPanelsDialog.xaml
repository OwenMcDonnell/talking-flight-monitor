<Window x:Class="tfm.PMDG.PMDG_737.CockpitPanels.CockpitPanelsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tfm.PMDG.PMDG_737.CockpitPanels"
        mc:Ignorable="d"
        Title="Cockpit panels" SizeToContent="WidthAndHeight" AutomationProperties.IsDialog="True" ResizeMode="NoResize" Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CockpitPanelsDialog.focusSearchBox}" Executed="FocusSearchBox"/>
        <CommandBinding Command="{x:Static local:CockpitPanelsDialog.focusPanelsTreeView}" Executed="FocusPanelsTreeView"/>
        <CommandBinding Command="{x:Static local:CockpitPanelsDialog.clearSearchResults}" Executed="ClearSearchResults"/>
        <CommandBinding Command="{x:Static local:CockpitPanelsDialog.resetTreeView}" Executed="ResetPanelsTreeView"/>
    </Window.CommandBindings>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                <TextBox x:Name="searchTextBox"
                                                                           Width="100"
                                                  Margin="5, 5, 5, 5"
                                                                                                                                                                                                 AutomationProperties.AcceleratorKey="F2"
                 AutomationProperties.AccessKey="F2"
                 AutomationProperties.Name="Search for panels"
                 AutomationProperties.AutomationId="SearchTextBox"
            KeyDown="searchTextBox_KeyDown"/>
                <Button x:Name="clearSearchButton"
                                                        Content="Clear"
                        Margin="5, 5, 5, 5"
                                                                                                                                                        AutomationProperties.Name="Clear search results"
        AutomationProperties.AutomationId="ClearSearchButton"
        AutomationProperties.AcceleratorKey="F4"
        AutomationProperties.AccessKey="F4"
                        Click="clearSearchButton_Click"/>

                <Button x:Name="resetButton"
                        Margin="5, 5, 5, 5"
                                                        Content="Reset"
                                                                                                                                                                                    AutomationProperties.Name="Reset panel order"
        AutomationProperties.AutomationId="ResetButton"
        AutomationProperties.AcceleratorKey="F5"
        AutomationProperties.AccessKey="F5"
                        Click="resetButton_Click"/>
            </StackPanel>
            <TreeView x:Name="panelsTreeView"
                                                                                                            Grid.Column="0"
                                                                                                            Grid.Row="1"
                      Grid.ColumnSpan="3"
                      AutomationProperties.AcceleratorKey="F3"
                      AutomationProperties.AccessKey="F3"
                                                                                                                                                                                               AutomationProperties.Name="Cockpit panels"
                  AutomationProperties.AutomationId="CockpitPanelsTreeView"
                  Margin="5, 15, 5, 5"
                  IsTextSearchEnabled="True"
                                    SelectedItemChanged="panelsTreeView_SelectedItemChanged"
                      PreviewKeyDown="panelsTreeView_PreviewKeyDown">
                <TreeView.ContextMenu>
                    <ContextMenu x:Name="panelsContextMenu">
                        <MenuItem x:Name="savePanelLayoutMenuItem" Header="_Save layout" Click="savePanelLayoutMenuItem_Click"/>
                        <MenuItem x:Name="sortAscendingMenuItem" Click="sortAscendingMenuItem_Click" Header="Sort children _ascending"/>
                        <MenuItem x:Name="sortDescendingMenuItem" Click="sortDescendingMenuItem_Click" Header="Sort children _descending"/>
                    </ContextMenu>
                </TreeView.ContextMenu>
                <TreeViewItem Name="overhead" Header="Overhead">
                    <TreeViewItem x:Name="adiru" Header="ADIRU"/>
                    <TreeViewItem x:Name="domeLights" Header="Dome lights"/>
                    <TreeViewItem x:Name="eec" Header="EEC"/>
                    <TreeViewItem x:Name="flightRecorder" Header="Flight recorder"/>
                    <TreeViewItem x:Name="gear" Header="Gear"/>
                    <TreeViewItem x:Name="oxygen" Header="Oxygen"/>
                    <TreeViewItem x:Name="pseu" Header="PSEU"/>
                    <TreeViewItem x:Name="servicePhone" Header="Service phone"/>
                    <TreeViewItem x:Name="engines" Header="Engines"/>
                    <TreeViewItem x:Name="lights" Header="Lights"/>
                    <TreeViewItem x:Name="airSystems" Header="Air systems"/>
                    <TreeViewItem x:Name="antiIce" Header="Anti-ice"/>
                    <TreeViewItem x:Name="main" Header="Main"/>
                    <TreeViewItem x:Name="hydraulics" Header="Hydraulics"/>
                    <TreeViewItem x:Name="apu" Header="APU"/>
                    <TreeViewItem x:Name="electrical" Header="Electrical"/>
                    <TreeViewItem x:Name="flightControls" Header="Flight controls"/>
                    <TreeViewItem x:Name="fuel" Header="Fuel"/>
                    <TreeViewItem x:Name="navDisplays" Header="Navigation displays"/>
                    <TreeViewItem x:Name="wipers" Header="Wipers"/>
                </TreeViewItem>
                <TreeViewItem x:Name="controlStand" Header="Control stand">
                    <TreeViewItem x:Name="cargoFire" Header="Cargo fire"/>
                    <TreeViewItem x:Name="cdu" Header="CDU"/>
                    <TreeViewItem x:Name="trim" Header="Trim"/>
                    <TreeViewItem x:Name="fire" Header="Fire"/>
                    <TreeViewItem x:Name="pedestal" Header="Pedestal"/>
                    <TreeViewItem x:Name="transponder" Header="Transponder"/>
                </TreeViewItem>
                <TreeViewItem x:Name="forward" Header="Forward">
                    <TreeViewItem x:Name="displayUnits" Header="Display units"/>
                    <TreeViewItem x:Name="flaps" Header="Flaps"/>
                    <TreeViewItem x:Name="brakes" Header="Brakes"/>
                    <TreeViewItem x:Name="gear_forward" Header="Gear"/>
                    <TreeViewItem x:Name="main_forward" Header="Main"/>
                    <TreeViewItem x:Name="mcp" Header="MCP"/>
                    <TreeViewItem x:Name="speed_forward" Header="Speed"/>
                    <TreeViewItem x:Name="standby" Header="Standby"/>
                </TreeViewItem>
                <TreeViewItem x:Name="glareShield" Header="Glare shield">
                    <TreeViewItem x:Name="mcpGS" Header="MCP">
                        <TreeViewItem x:Name="mcpAltitude" Header="Altitude"/>
                        <TreeViewItem x:Name="mcpHeading" Header="Heading"/>
                        <TreeViewItem x:Name="mcpNavigation" Header="Navigation"/>
                        <TreeViewItem x:Name="mcpPower" Header="Power"/>
                        <TreeViewItem x:Name="mcpSpeed" Header="Speed"/>
                        <TreeViewItem x:Name="mcpVerticalSpeed" Header="Vertical speed"/>
                    </TreeViewItem>
                    <TreeViewItem x:Name="warningsGS" Header="Warnings"/>
                </TreeViewItem>
                <TreeViewItem x:Name="afs" Header="AFS"/>
                <TreeViewItem x:Name="lowerForward" Header="Lower forward"/>
            </TreeView>
                   </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <UserControl x:Name="contentArea"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Grid.Column="0"
                     Grid.Row="0"
                     AutomationProperties.Name="Content area"
                     AutomationProperties.AutomationId="ContentArea"/>

        </Grid>
    </StackPanel>
</Window>
