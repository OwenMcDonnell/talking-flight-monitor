<UserControl x:Class="tfm.Settings_panels.Weather.ctlWindSnapshot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tfm.Settings_panels.Weather"
             xmlns:s="clr-namespace:tfm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Wind snapshot" >
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <CheckBox Content="Upper altitude" IsChecked="{s:WeatherSettingBinding WindLayer_UpperAltitude}" />
            <CheckBox Content="Direction" IsChecked="{s:WeatherSettingBinding WindLayer_Direction}" />
            <CheckBox Content="Speed" IsChecked="{s:WeatherSettingBinding WindLayer_Speed}" />
            <CheckBox Content="Gust" IsChecked="{s:WeatherSettingBinding WindLayer_Gust}" />
            <CheckBox Content="Visibility" IsChecked="{s:WeatherSettingBinding WindLayer_Visibility}" />
            <CheckBox Content="Turbulence" IsChecked="{s:WeatherSettingBinding WindLayer_Turbulence}" />
            
        </WrapPanel>
    </GroupBox>
</UserControl>
