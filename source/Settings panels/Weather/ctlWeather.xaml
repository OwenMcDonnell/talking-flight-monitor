<UserControl x:Class="tfm.Settings_panels.weather.ctlWeather"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tfm.Settings_panels.weather"
             xmlns:s="clr-namespace:tfm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label Name="lblRefresh" Content="Weather refresh rate in minutes: "/>
        <TextBox x:Name="txtRefresh" Text="{s:WeatherSettingBinding weather_refresh_rate}"/>
    </StackPanel>
</UserControl>
