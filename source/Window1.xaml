<Window x:Class="tfmwpf.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:my="clr-namespace:tfm"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <DockPanel>
        <TreeView x:Name="CategoryTreeView" DockPanel.Dock="Left" Width="200" Margin="5"
                  SelectedItemChanged="CategoryTreeView_SelectedItemChanged">
            <TreeViewItem Header="Category 1" Name="nodGeneral"/>


            <TreeViewItem Header="Category 2" Name="nodSpeech"/>


        </TreeView>
        <ContentControl x:Name="content" Margin="5"/>
        
    </DockPanel>
</Window>
